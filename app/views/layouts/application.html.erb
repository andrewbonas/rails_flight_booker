<!DOCTYPE html>
<html>
  <head>
    <title>RailsFlightBooker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
      <div class="container">
        <%= link_to <i class="fas fa-plane"></i>"Bonas Air", root_path, class: "navbar-brand" %>
          <ul class="navbar-nav mr-right">
            <li class="nav mr-auto"> 
              <%= link_to 'Flights', root_path, class: "nav-link px-2" %>
              <%= link_to 'Bookings',  root_path, class: "nav-link px-2" %>
            </li>
          </ul>
      </div>
       </nav>
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <%= value %>
        </div>
      <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
