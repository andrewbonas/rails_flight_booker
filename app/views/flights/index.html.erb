<h3 class="mb-6 text-center text-secondary">Search Flights</h3>


<%= form_with(url: "/flights", method: "get", local: true) do %>
  <div class="input-group">
    <%= hidden_field_tag :search, "true"%>
    <%= select_tag(:departure_airport, options_for_select(@airport_options),
      {prompt: 'From', class: 'form-control'}) %>
    <%= select_tag(:arrival_airport, options_for_select(@airport_options),
      {prompt: 'To', class: 'form-control'}) %>
    <%= select_tag(:date, options_for_select(@date_options),
      {prompt: 'Date', class: 'form-control'}) %>
    <%= select_tag(:passenger_count, options_for_select(@passenger_options),
      {prompt: 'Passengers', class: 'form-control'}) %>
    <div class="input-group-append">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<%= render 'flights' if @flights %>